<div class="container">
  <h1>User Skills and Levels</h1>
  <table style="width: 90%">
    <tr>
      <th>Name</th>
      <th>Skill</th>
      <th>Years</th>
      <th>Formal?</th>
    </tr> 
    <% @users.each do |user| %>
     <% user.proficiencies.each_with_index do |proficiency,index| %>
      <tr style="<%= (index == 0) ? "border-top: 1px dotted black;" : ""%>">
        <td><%= (index == 0) ? user.name : ""%></td>
        <td><%= proficiency.skill.name %> (<%= proficiency.skill.context %>)</td> 
        <td style="text-align: center"><%= proficiency.experience %></td>
        <td style="text-align: center"><%= proficiency.formal_education ? "yes" : "no"%></td>
      </tr>
      <% end %>
    <% end %>
  </table>
  <%# TODO: display the skills and proficiency levels for each user ... %>
</div>
