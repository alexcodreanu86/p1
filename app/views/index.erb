<div class="container">
  <h1>User Skills and Levels</h1>
  <table >
    <tr>
      <th>Name</th>
      <th>Skill</th>
      <th>Years</th>
      <th>Formal?</th>
    </tr> 
    <% @users.each do |user| %>
     <% user.proficiencies.each do |proficiency| %>
      <tr style=" border-top: 2px dotted black;">
        <td><%= user.name %></td>
        <td><%= proficiency.skill.name %> (<%= proficiency.skill.context %>)</td> 
        <td><%= proficiency.experience %> </td>
        <td><%= proficiency.formal_education ? "yes" : "no"%></td>
      </tr>
      <% end %>
    <% end %>
  </table>
  <%# TODO: display the skills and proficiency levels for each user ... %>
</div>
